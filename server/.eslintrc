{
  "plugins": [
    "prettier",
    "jest"
  ],
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true
  },
  "extends": [
    "airbnb-base",
    "plugin:prettier/recommended",
    "plugin:jest/recommended"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "prettier/prettier": [
      "warn",
      {
        "printWidth": 85,
        "trailingComma": "es5",
        "singleQuote": true,
        "arrowParens": "always",
        "semi": false
      }
    ],
    "no-console": "off",
    "semi": [
      "warn",
      "never"
    ],
    "class-methods-use-this": "off",
    "no-use-before-define": "off",
  }
}